@model IEnumerable<MVCRouteSystem.Models.Team>

@{
    ViewData["Title"] = "Index";
}

<h1>Times</h1>

<p>
    <a class="btn btn-outline-dark" asp-action="Create">Cadastrar novo time</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="d-flex justify-content-end">
               @Html.ActionLink("Editar","Edit",new {id = item.Id },new{@class ="btn btn-outline-success"})
               @Html.ActionLink("Detalhes","Details", new{id = item.Id},new{@class ="btn btn-outline-primary" })
               @Html.ActionLink("Deletar","Delete",new{id = item.Id},
               new {@class="btn btn-outline-danger" ,onclick = $"return confirm('Deletar time : {item.Name} ?');"})
            </td>
        </tr>
}
    </tbody>
</table>