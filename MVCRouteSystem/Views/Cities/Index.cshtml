@model IEnumerable<MVCRouteSystem.Models.City>

@{
    ViewData["Title"] = "Index";
}

<h1>Cidades</h1>

<p>
	<a class="btn btn-outline-dark" asp-action="Create">Cadastrar nova Cidade</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.State)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.State)
				</td>
				<td>
					@Html.ActionLink("Editar","Edit",new {id = item.Id },new{@class ="btn btn-outline-success"})
					@Html.ActionLink("Detalhes","Details", new{id = item.Id},new{@class ="btn btn-outline-primary" })
					@Html.ActionLink("Deletar","Delete",new{id = item.Id},
				new {@class="btn btn-outline-danger" ,onclick = $"return confirm('Deletar cidade : {item.Name} ?');"})
				</td>
			</tr>
		}
	</tbody>
</table>
